<!-- editText_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal durumda arka plan -->
    <item android:state_enabled="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" /> <!-- Köşe yarıçapı -->
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Kenarlık rengi ve kalınlığı -->
        </shape>
    </item>
    <!-- Focused durumda arka plan -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Arkaplan rengi -->
            <corners android:radius="8dp" /> <!-- Köşe yarıçapı -->
            <stroke
                android:width="2dp"
                android:color="#222831" /> <!-- Kenarlık rengi ve kalınlığı -->
        </shape>
    </item>
    <!-- Devre dışı durumda arka plan -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Arkaplan rengi -->
            <corners android:radius="8dp" /> <!-- Köşe yarıçapı -->
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Kenarlık rengi ve kalınlığı -->
        </shape>
    </item>
</selector>
