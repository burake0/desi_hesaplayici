<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Basıldığında -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000"/> <!-- Kullanıcı düğmeye dokunduğunda arka plan rengi -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Normalde -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Normal durumda arka plan rengi -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
